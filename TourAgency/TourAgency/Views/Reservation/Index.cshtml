@model TourAgency.ViewModelPages.ReservationsViewModelPages
@{
    ViewData["Title"] = "Index";
}

<h2>Rezerwacje</h2>
@if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Add Rezerwacja", "AddReservation")
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Reservations.First().ReservationId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reservations.First().ReservationDate)
            </th>
            <th>
                Miejsce Wycieczki
            </th>
            <th>
                Imię Klienta
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Reservations)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ReservationId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReservationDate)
                </td>
                <td>
                    @if (item.IdTrips != null)
                    {
                        @foreach (var wycieczka in ViewBag.Wycieczki as List<TourAgency.ViewModels.TripViewModel>)
                        {
                            if (wycieczka.TripsId == item.IdTrips.TripsId)
                            {
                                @wycieczka.Country
                                break;
                            }
                        }
                    }
                </td>
                <td>
                    @if (item.IdClients != null)
                    {
                        @foreach (var klient in ViewBag.Klienci as List<TourAgency.ViewModels.ClientViewModel>)
                        {
                            if (klient.ClientId == item.IdClients.ClientId)
                            {
                                @klient.FullName
                                break;
                            }
                        }
                    }
                </td>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        @Html.ActionLink("Edit", "EditRezerwacja", new { ReservationId = item.ReservationId }) |
                        @Html.ActionLink("Delete", "DeleteRezerwacja", new { ReservationId = item.ReservationId })
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
<div>
    Strona @(Model.CurrentPage) z @((int)Math.Ceiling((double)Model.TotalReservations / Model.PageSize))
</div>

<div>
    @if (Model.CurrentPage > 1)
    {
        <a asp-action="Index" asp-controller="Reservation" asp-route-page="@(Model.CurrentPage - 1)" asp-route-pageSize="@Model.PageSize">Poprzednia strona</a>
    }

    @if (Model.CurrentPage < (int)Math.Ceiling((double)Model.TotalReservations / Model.PageSize))
    {
        <a asp-action="Index" asp-controller="Reservation" asp-route-page="@(Model.CurrentPage + 1)" asp-route-pageSize="@Model.PageSize">Następna strona</a>
    }
</div>

<div>
    <form asp-action="Index" asp-controller="Reservation" method="get">
        <label for="pageSize">Rezerwacje na stronę:</label>
        <select id="pageSize" name="pageSize">
            <option value="5">5</option>
            <option value="10">10</option>
            <option value="20">20</option>
        </select>
        <input type="submit" value="Zastosuj" />
    </form>
</div>
